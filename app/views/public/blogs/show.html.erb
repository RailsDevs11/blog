<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10 offset1">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon">
            <i class="icon-refresh"></i>
          </span> 
          <h5>Post</h5>
          <span class='pull-right'>
            <%= link_to 'Back', public_blogs_path, :class => 'btn btn-inverse' %>
          </span>
        </div>
        <div class="widget-content nopadding updates">
          <div class="new-update clearfix">
            <i class="icon-ok-sign"></i>
            <span class="update-done">                    
              <a href="<%= public_blog_path(@post) %>" title=""><strong><%= @post.title %></strong></a>
              <span><%= @post.content %></span>
            </span>
            <span class="update-date"><span class="update-day"><%= day_format(@post.created_at) %></span><%= month_format(@post.created_at) %></span>
          </div>
        </div>        
      </div>
      
      COMMENTS :
      <div id="comments">
        <%#= render @comments %>
      </div>

      <%= simple_form_for(@comment, :url => public_blogs_path, :remote => true) do |f| %>
        <%= f.text_area :content, :rows => '3' %>
        <%#= f.submit 'Submit' %>
      <% end %>
      <button>Submit</button>
    </div>
  </div>
</div>
