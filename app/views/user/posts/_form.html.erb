<div class="control-group">
  <label class="control-label">Title</label>
  <div class="controls">
    <%= f.text_field :title, :placeholder => "Title"%>
  </div>
</div>
<div class="control-group">
  <label class="control-label">Content</label>
  <div class="controls">
    <%= f.text_area :content, :rows =>'5', :placeholder => "Content"%>
  </div>
</div>

<div class="form-actions">
  <%= f.submit @post.new_record? ? "Submit" : "Update", :class=>"btn btn-primary offset4" %>
</div>
