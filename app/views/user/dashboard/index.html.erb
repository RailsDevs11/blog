<% content_for :header do %>
  <h1>Dashboard</h1>
     <div class='row'>
      <div class="span4"></div>
      <% if current_user.is_profile_complete? %>
        <div class="span3" style="font-size:17px;">Profile Completeness(<%= current_user.profile_complete_in_per %>%)</div>
        <div class="span2">
          <div class="progress progress-success">
            <div class="bar" style="width: <%= current_user.profile_complete_in_per %>%;"></div>
          </div>
        </div>
      <% else %>
        <div class="span3 profile_box_completeness">Profile Completeness(<%= current_user.profile_complete_in_per %>%)</div>
        <div class="span3 profile_box">
          <div class="span2">
            <span style="font-size:12px;">
              <%= link_to "Complete Your Profile", edit_user_registration_path %>
            </span>
          </div>
          <div class="span2" style="width: 210px;">
            <div class="progress progress-success progress_bar_completeness">
              <div class="bar" style="width: <%= current_user.profile_complete_in_per %>%;"></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
<% end %>

<% content_for :breadcrumb do %>
  <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a>
  <a href="#" class="current">Dashboard</a>
<% end %>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6">
      <div class="widget-box">
        <div class="widget-title">
          <span class="icon"><i class="icon-file"></i></span>
          <h5>Recent Posts</h5>
          <% post_count = @recent_posts.present? ? @recent_posts.count : '0' %>
          <span title="54 total posts" class="label label-info tip-left"><%= post_count %></span>
        </div>
        <div class="widget-content nopadding">
          <ul class="recent-posts">
            <%= render :partial => 'recent_post', :collection => @recent_posts %>
            <li class="viewall">
              <a href="<%= user_posts_path %>" class="tip-top" data-original-title="View all posts"> + View all + </a>
            </li>
          </ul>
        </div>
    </div>
  </div>
  <div class="span6">
    <div class="widget-box">
      <div class="widget-title">
        <span class="icon"><i class="icon-comment"></i></span>
        <h5>Recent Comments</h5>
        <% comment_count = @recent_comments.present? ? @recent_comments.count : '0' %>
        <span title="88 total comments" class="label label-info tip-left"><%= comment_count %></span>
      </div>
      <div class="widget-content nopadding">
        <ul class="recent-posts">
          <%= render :partial => 'recent_comment', :collection => @recent_comments %>
          <li class="viewall">
            <a href="#" class="tip-top" data-original-title="View all posts"> + View all + </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div id="footer" class="span12">
    @2013 &copy; Blog-Comments
  </div>
</div>
